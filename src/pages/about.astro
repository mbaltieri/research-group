import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};

import { getCollection } from "astro:content";

// Count all non-draft publication entries
const publications = await getCollection("publications");
const publicationsCount = publications.filter(p => !p.data.draft).length;

// Count all non-advisor entries
const researchers = await getCollection("people");
const researchersCount = researchers.filter(
  p => !p.data.draft && p.data.group !== "Advisors"
).length;
