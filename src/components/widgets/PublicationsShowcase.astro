---
interface PubItem {
  href: string;
  title: string;
  authors?: string | string[];
  venue?: string;
  year?: number | string;
  badge?: string;
  doi?: string;
  external?: string;
  cover?: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  items: PubItem[];
  viewAllHref?: string;
  dense?: boolean;
  showCovers?: boolean;
  background?: boolean;
}

const {
  title = "Recent Publications",
  subtitle = "",
  items = [],
  viewAllHref = "/publications",
  dense = false,
  showCovers = false,
  background = true,
} = Astro.props;

/** Utilities */
function formatAuthors(authors?: string | string[]) {
  if (!authors) return "";
  const arr = Array.isArray(authors) ? authors : [authors];
  return arr
    .map((a) => a.trim().replace(/\s+/g, " "))
    .join(", ")
    .replace(/\s*,\s*$/, "");
}
---

<section
  class:list={[
    "py-12",
    "px-6",
    background
      // Stronger, clearly visible in light mode; elegant in dark mode
      ? "rounded-3xl bg-zinc-100 dark:bg-white/5 border border-black/10 dark:border-white/10 shadow-sm"
      : "",
  ]}
>
  <div class="mx-auto max-w-7xl">
    <header class="mb-8">
      <h2 class="text-2xl font-bold tracking-tight">{title}</h2>
      {subtitle && <p class="mt-1 text-sm opacity-80">{subtitle}</p>}
    </header>

    <ul class="space-y-6">
      {items.map((p) => (
        <li>
          <a href={p.href} class="block group">
            <h3 class="text-lg font-semibold group-hover:underline">
              {p.title}
            </h3>

            <p class="mt-1 text-sm opacity-80">
              {formatAuthors(p.authors)}
              {p.venue && ` — ${p.venue}`}
              {p.year && ` · ${p.year}`}
              {p.badge && (
                <span class="ml-2 rounded-full border px-2 py-0.5 text-xs">
                  {p.badge}
                </span>
              )}
            </p>
          </a>
        </li>
      ))}
    </ul>

    {viewAllHref && (
      <div class="mt-8 text-center">
        <a
          href={viewAllHref}
          class="inline-block rounded-full border px-4 py-2 text-sm hover:bg-black/5 dark:hover:bg-white/10"
        >
          View all →
        </a>
      </div>
    )}
  </div>
</section>

