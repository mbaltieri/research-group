---
import { SITE } from 'astrowind:config';
import arayaLogo from '../assets/images/araya-ai-logo.png'; // adjust path if needed
---

<span
  class="inline-flex items-center gap-2 self-center ml-2 rtl:ml-0 rtl:mr-2 text-xl font-bold text-gray-900 whitespace-nowrap dark:text-white align-middle"
>
  <img
    src={arayaLogo.src}
    alt="Araya logo"
    class="h-5 md:h-6 w-auto object-contain"
    loading="lazy"
    decoding="async"
  />
  <span class="leading-none">Araya R&D</span>
</span>

